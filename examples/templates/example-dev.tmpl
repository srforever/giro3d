<!DOCTYPE html>
<html>
    <head>
        <title>%title% - Giro3D</title>
        <meta charset="UTF-8">
        <meta name="name" content="%name%">
        <meta name="description" content="%description%">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="/images/favicon.svg">
        <link href="/assets/bootstrap-custom.css" rel="stylesheet" />
        <script src="/assets/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.1.2/styles/github.min.css">
        <link rel="stylesheet" type="text/css" href="css/example.css">
        <style>
        %customcss%
        </style>
    </head>
    <body class="p-0 m-0 border-0 d-flex flex-column bg-light">

        <div class="m-0 p-0">

            <!-- 3D view -->
            <div class="position-relative vh-100 vw-100">
                <!-- Viewer -->
                <div id="viewerDiv"></div>
                <!-- Inspector (visible by default) -->
                <div id="panelDiv" class="position-absolute top-0 start-0 mh-100 overflow-auto"></div>
                <!-- Optional additional content from the example (custom buttons, etc.) -->
                %content%
                <!-- Status bar -->
                <div id="status-bar"
                     class="bg-light d-flex w-100 position-absolute bottom-0 start-0 status-bar">

                    <div class="progress m-2 status-progress-bar" role="progressbar" style="height: 5px" aria-label="Basic example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                        <div id="progress-bar" class="progress-bar" style="width: 100%"></div>
                    </div>
                    <span id="loading-percent" class="status-progress-value">100%</span>
                    <span id="memory-usage" class="mx-2 memory-usage">0 MB</span>
                    <span class="text-center status-attribution">%attribution%</span>
                    <!-- Coordinates -->
                    <div id="coordinates"
                         class="px-1 position-absolute end-0 text-secondary">
                    </div>
                </div>
            </div>

        </div>

        <!-- The code of the example -->
        <script type="module" src="./shared.js"></script>
        <script type="module" src="%js%"></script>
        <script>
            /* activate popovers */
            const popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            popoverTriggerList.map(
                // bootstrap is used as script in the template, disable warning about undef
                // eslint-disable-next-line no-undef
                popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl, {
                    trigger: 'hover',
                    placement: 'left',
                    content: document.getElementById(popoverTriggerEl.getAttribute('data-bs-content')).innerHTML,
                    html: true,
                }),
            );
        </script>
    </body>
</html>

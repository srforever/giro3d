{
    "$schema": "https://json.schemastore.org/prettierrc",
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid",
    "vueIndentScriptAndStyle": true,
    "plugins": ["prettier-plugin-ejs"],
    "overrides": [
        {
            "files": ["*.json", "*.jsonc"],
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}

<header class="header">
    <div class="container-fluid">
        <a href="#" class="navbar-brand mx-0">
            <img
                src="<%= locals.favicon ?? '/images/favicon.svg' %>"
                class="brand"
                width="32"
                height="32"
            />
        </a>

        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav navbar-nav-left">
                <%# > Comment to kinda disable prettier %>
                <%- include('navbar-link', { id: 'index', href: '/index.html', title: 'Home', class: '' } ) %>
                <%- include('navbar-link', { id: 'giro3d', href: '/giro3d.html', title: 'Giro3D framework' }) %>
                <%- include('navbar-link', { id: 'piero', href: '/piero.html', title: 'Piero application', class: 'nav-link-success'}) %>
                <%- include('navbar-link', { id: 'tutorials', href: '/tutorials/getting-started.html', title: 'Getting started with Giro3D'}) %>
                <%- include('navbar-link', { id: 'examples', href: '/examples/index.html', title: 'Giro3D examples'}) %>
                <%- include('navbar-link', { id: 'apidoc', href: '/apidoc/index.html', title: 'API documentation'}) %>
                <%- include('navbar-link', { id: 'faq', href: '/faq.html', title: 'FAQ'}) %>
                <%- include('navbar-link', { id: 'governance', href: '/governance.html', title: 'Governance'}) %>
                <%- include('navbar-link', { id: 'sponsors', href: '/sponsors.html', title: 'Sponsors'}) %>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="https://gitlab.com/giro3d/giro3D" target="_blank"
                        >GitLab <i class="bi bi-box-arrow-up-right"></i
                    ></a>
                </li>
            </ul>

            <% if (locals.searchExamples) { %>
            <%- include('navbar-examples-search') %>
            <% } %>

            <% if (locals.searchApidoc) { %>
            <%- include('navbar-apidoc-search') %>
            <% } %>
        </div>
    </div>
</header>

{
    "include": ["./theme.tsx"],
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "../build",
        // We don't want to check the external libraries, only our
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        // Force typing of all parameters and variables
        "noImplicitAny": true,
        "jsx": "react",
        "jsxFactory": "JSX.createElement",
        "jsxFragmentFactory": "JSX.Fragment"
    }
}
